{{!
    @template format_flexsections/local/content/section/summary

    Displays the course section summary and secondarytitle.

    Example context (json):
    {
        "summarytext": "Summary text!",
        "secondarytitle": "Secondary title"
    }
}}
{{#secondarytitle}}
    <div class="course-description-item secondarytitle">
        <div class="description-inner">
            {{{secondarytitle}}}
        </div>
    </div>
{{/secondarytitle}}
{{#summarytext}}
    <div class="course-description-item summarytext">
        <div class="description-inner">
            {{{summarytext}}}
        </div>
    </div>
{{/summarytext}}
